<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <!-- <id>release</id> -->
    <id>jones-tank</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>db</directory>
            <outputDirectory>db</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/tank-${version}.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>tank.jar</destName>
        </file>
        <file>
            <source>src/main/resources/application.properties</source>
            <outputDirectory>/</outputDirectory>
            <destName>application.properties</destName>
        </file>
        <file>
            <source>bin/start.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>start.sh</destName>
        </file>
        <file>
            <source>bin/start.bat</source>
            <outputDirectory>/</outputDirectory>
            <destName>start.bat</destName>
        </file>
    </files>
</assembly>